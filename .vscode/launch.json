    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Tests (Current File)",
            "skipFiles": ["<node_internals>/**"],
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/.bin/mocha",
                "${relativeFile}"
            ],
            "outFiles": ["${workspaceFolder}/**/*.js"]
        }
    ]
}
